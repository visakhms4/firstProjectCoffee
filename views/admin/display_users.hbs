{{>admin_sidebar}}
<section style="margin-left: 8rem;">
  <div class="container-fluid">
    <div class="container-fluid">
      <div class="row my-4">
        <div class="float-end">
          
        </div>
      </div>
    </div>
    <div class="container-fluid" style="overflow-x:auto;">
      <table class="table border-bottom border-secondary" id="user-table">
        <thead>
          <tr>
            <th class="" scope="col">ID</th>
            <th class="" scope="col">Name</th>
            <th class="" scope="col">Email</th>
            <th class="" scope="col">Delivery Address</th>
            <th class="" scope="col">Purchaseed Items</th>
            <th class="" scope="col">Total Spend</th>
            <th class="" scope="col">Cart</th>
            <th class="" scope="col">Options</th>

          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr class="bg-white">
              <th class="" scope="row">{{inc @index}}</th>
              <td class="">{{this.name}}</td>
              <td class="">{{this.email}}</td>
              <td class="">{{this.deliveryAddress}}</td>
              
              <td class="">{{this.purchasedItems}}</td>
              <td class="">{{this.totalSpend}}</td>
              <td class="">{{this.Cart}}</td>
              <td class="" >
                <a
                  class="btn btn-primary"
                  href=""
                >Block
                </a>
                <a
                  class="btn btn-danger"
                  href=""
                  onclick="return confirm('Are you sure you want to delete {{this.user}} product?');"
                >Delete
                </a>
              </td>
             
              {{! <td class=""><a href="/admin/delete-user"><img src="/images/trash.svg" alt="delete" width="25px" height="25px" ></a></td> }}
              
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<link rel="stylesheet" href="/stylesheets/datatable.css" />