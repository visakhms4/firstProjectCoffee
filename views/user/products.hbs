<section >
  <div class=" mt-5 " style="height:25rem ;" >
    <div class="row g-3 d-flex">
     

      {{#each products}}
         <div class="card m-2" style="width: 18rem; height:400px">
        <img src="/product_images/{{this._id}}.jpg" width="100%" height="50%" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{this.Product_name}}</h5>
          <p class="card-text ">{{this.description}}</p>
          <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
        </div>
      </div>
        
      {{/each}}
      {{#unless products}}
        <h1>No Products are available</h1>
      {{/unless}}
    </div>
  </div> 
</section>
