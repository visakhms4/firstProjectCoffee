<script>
    function changeStatus(orderId, productId) { 
     console.log(orderId, productId); 
     let val = $(`#status${productId}`).val(); 
      console.log(val); 
      $.ajax({ 
         type: "POST", 
         url: "/admin/order/changeStatus", 
         data: { 
             orderId: orderId, 
             productId: productId, 
             status: val, 
         }, 
         success: function(data) { 
             console.log('success') 
             $(`#${productId}`).text(val) 
         }, 
         error: function(error) { 
             console.log(error) 
         } 
     }) 
 }
</script>
